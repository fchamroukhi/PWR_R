	Keywords = {accelerometer, activity\_recognition, posture},
	Month = dec,
	Number = {4},
	Pages = {375--385},
	Title = {{Detection of static and dynamic activities using uniaxial accelerometers}},
	Volume = {4},
	Year = {1996}}

